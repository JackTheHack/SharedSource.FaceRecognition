@model List<SharedSource.FaceRecognition.Models.Person>
@using Sitecore.Extensions
@using Sitecore.Mvc
@using Sitecore.Mvc.Extensions

@{Layout = null;}

<div class="tag-item-selector">
    <input type="hidden" name="selectedTag"/>
    <div class="suggested-persons-container" style="display: none">
        <h3>Suggested persons:</h3>
        <div class="suggested-persons">

        </div>
    </div>
    <div>
        <h3>Identify person:</h3>
        @if (Model != null)
        {
            foreach (var person in Model)
            {
                <div class="tag-person">
                    <a href="#" data-value="@person.ID">@person.Name @person.Surname</a>
                </div>
            }
        }
    </div>
</div>
